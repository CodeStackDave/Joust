{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "files": [
    "interfaces.d.ts",
    "run.tsx",
    "Entity.ts",
    "Player.ts",
    "state/GameState.ts",
    "state/GameStateMutator.d.ts",
    "state/GameStateScrubber.ts",
    "state/managers/HistoryGameStateManager.ts",
    "state/managers/SingleGameStateManager.ts",
    "Option.ts",
    "components/Application.tsx",
    "components/welcome/Kettle.tsx",
    "components/welcome/HSReplay.tsx",
    "components/EndTurnButton.tsx",
    "components/EntityList.tsx",
    "components/Hero.tsx",
    "components/HeroPower.tsx",
    "components/JoustGame.tsx",
    "components/Minion.tsx",
    "components/Secret.tsx",
    "components/Secrets.tsx",
    "components/Field.tsx",
    "components/Hand.tsx",
    "components/Player.tsx",
    "components/Deck.tsx",
    "components/Card.tsx",
    "components/Weapon.tsx",
    "components/TwoPlayerGame.tsx",
    "state/mutators/AddEntityMutator.ts",
    "state/mutators/TagChangeMutator.ts",
    "state/mutators/ReplaceEntityMutator.ts",
    "state/mutators/ClearOptionsMutator.ts",
    "state/mutators/SetOptionsMutator.ts",
    "protocol/KettleTranscoder.ts",
    "protocol/HSReplayDecoder.ts",
    "protocol/TCPSocketClient.ts",
    "protocol/WebSocketClient.ts",
    "metadata/HearthstoneJSON.ts",
    "components/stats/Attack.tsx",
    "components/stats/Cost.tsx",
    "components/stats/Health.tsx"
  ],
  "exclude": []
}
